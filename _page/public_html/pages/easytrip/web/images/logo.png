    public void preenxeTabela()
    {
        DateTimeFormatter format = DateTimeFormatter.ofPattern("dd/MM/yyyy");
        modelo.setNumRows(0);
        ArrayList<Orcamento> ors = Agenda.getExpirando();
        if(ors != null)
        {
            String[] linha = new String[6];
            Orcamento or;
            for(int i = 0;i<ors.size();i++)
            {
                or = ors.get(i);
                linha[0] = String.valueOf(or.getIdOrcamento());
                linha[1] = or.getCliente().getNome();
                linha[2] = or.getAniversariante().getNome();
                linha[3] = or.getOr().getDataFesta().format(format);
                linha[4] = or.getOr().getValorFesta().getPeriodo();
                if(Agenda.agendado(or.getIdOrcamento()))
                {
                    linha[5] = "SIM";
                }
                else
                {
                    linha[5] = "NÃO";
                }
                
                
                modelo.addRow(linha);
                
            }
        }
    }

